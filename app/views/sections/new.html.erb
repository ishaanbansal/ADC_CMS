<% @page_title="New Section " %>

<%= link_to("<< Back to List", {:action => 'index', :page_id => @page.id}, :class => 'back-link') %>

<div class="col-md-8">
  <h2>Create Section</h2>

  <%= form_for(:section, :url => {:action => 'create', :page_id => @page.id}) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= submit_tag("Create Section", :class => "btn btn-success") %>
    </div>

  <% end %>
</div>
<div class="col-md-4" id="help">
  HELP - Sections
</div>
