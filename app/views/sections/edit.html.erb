<% @page_title="Edit "+@section.name %>

<%= link_to("<< Back to List", {:action => 'index', :page_id => @page.id}, :class => 'back-link') %>

<div class="col-md-8">
  <h2>Update Section</h2>

  <%= form_for(:section, :url => {:action => 'update', :id => @section.id, :page_id => @page.id}) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= submit_tag("Update Section", :class => "btn btn-primary") %>
    </div>

  <% end %>
</div>
<div class="col-md-4" id="help">
  HELP - Sections
</div>