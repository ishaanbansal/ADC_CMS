<!DOCTYPE html>
<html>
  <head>
    <title>ADC<%= " | #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  </head>
  <body data-spy="scroll" data-target="#side-navigation">
    
    <div id="header">
      <%= render 'layouts/header' %>
    </div>
    <div id="page_navigation">
      <%= render 'layouts/page_nav' %>
    </div>
    <div id="main" class="container">
      <div class="row">

        <div id="content" class="col-md-9">
          <%= yield %>
        </div>
        
        <div id="side_navigation" class="col-md-3 hidden-xs hidden-sm">
          <%= render 'layouts/side_nav' %>
        </div>

      </div>
    </div>
    <div id="footer" class="navbar-inverse navbar-fixed-bottom">
      <%= render 'layouts/footer' %>
    </div>

  </body>

  <script type="text/javascript">
    $('#side_nav').affix({
    offset: {
      top: 60,
     bottom: function () {
        return (this.bottom = $('.footer').outerHeight(true))
      }
    }
  })
    
  </script>
</html>
