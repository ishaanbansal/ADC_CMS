<% @page_title = "Login" %>

<div class="login">
  <%= form_tag(:action => 'attempt_login') do %>
  <div class="form-group">
    
      <%= label_tag(:username) %>
      <%= text_field_tag(:username,nil, :class => "form-control") %>
    
    
      <%= label_tag(:password) %>
      <%= password_field_tag(:password,nil, :class => "form-control") %>
    
    
     </br>
      <%= submit_tag("Log In", :class => "btn btn-primary") %>
    
  </div>
  <% end %>
    <div>
      Not registered yet ?
   <%= link_to("Register Now",{:controller => 'user', :action => 'register'}) %>
  </div>
</div>
