<% @page_title = " Users List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="user index">
  <h2>Users</h2>
  <div><%= pluralize(@users.size, 'user') %> found</div>

  <table class="table table-hover" summary="users list">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= mail_to(user.email) %></td>
    </tr>
    <% end %>
  </table>

</div>
